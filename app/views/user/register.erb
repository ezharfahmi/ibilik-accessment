<h1>Sign Up</h1>

<form action="/users" method="post">
	<table>
		<tr>
			<td>
				<label>Name: </label>
			</td>
			<td>
				<input type="text" name="name">
			</td>
		</tr>
		<tr>
			<td><label>Email: </label></td>
